@{ 
    ViewData["Title"] = $"Edit";
}

@model Folder

    <div class="container-fluid">
        <div class="row p-3">
            <div class="col-sm">
                <form asp-action="Edit" asp-controller="Folder">
                    <div class="row my-3">
                        <div class="col-sm-6 position-relative">
                            <label asp-for="Name"></label>
                            <input asp-for="Name" placeholder="@Model.Name"/>
                            <input hidden asp-for="Id" value="@Model.Id" />
                        </div>
                        <div class="col-sm-6">
                            <button type="submit" class="btn btn-light btn-lg">Edit folder</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>