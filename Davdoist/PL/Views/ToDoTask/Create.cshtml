@{
    ViewData["Title"] = "Create ToDoTask";
}

@model IEnumerable<Folder>

<div class="container-fluid">
    <div class="row p-3">
        <div class="col-sm">
            <form asp-action="Create" asp-controller="ToDoTask">
                <div class="row p-3">
                    <div class="col-sm-4">
                        <input type="text" class="form-control" name="toDoTask.Header" placeholder="Header" />
                    </div>
                    <div class="col-sm-4">
                        <input type="text" class="form-control" name="toDoTask.Description" placeholder="Description" />
                    </div>
                    <div class="col-sm-4">
                        <input type="date" name="toDoTask.Date" class="form-control" min="@DateTime.Now.Year" max="@DateTime.MaxValue" />
                    </div>
                </div>
                <div class="row p-3">
                    <div class="col-sm-2 form-check">
                        <input type="checkbox" name="toDoTask.IsCompleted" value="No" class="form-check-input form-check-50" id="IsCompleted" />
                        <label class="form-check-label h4" for="IsCompleted">Is completed</label>
                    </div>
                    <div class="col-sm-5">
                        <select class="form-control" name="toDoTask.Priority" id="Priority">
                            @foreach (Priority priority in (Priority[])Enum.GetValues(typeof(Priority)))
                            {
                                <option value="@((int)priority)">@priority</option>
                            }
                        </select>
                    </div>
                    <div class="col-sm-5">
                        <select class="form-control" name="toDoTask.FolderId" id="Folder">
                            <option value=@null>None</option>
                            @foreach (Folder folder in Model)
                            {
                                <option value="@folder.Id">@folder.Name</option>
                            }
                        </select>
                    </div>
                </div>
                <div class="row p-3">
                    <div class="col-sm">
                        <button type="submit" class="btn btn-light btn-lg">Create task</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>