@{
    ViewData["Title"] = $"Delete {Model.Header}";
}

@model ToDoTask

<div class="container">
    <div class="row p-3">
        <div class="col-sm-12">
            <h2>@Model.Header</h2>
            <h3>Are you sure?</h3>
            <form asp-action="Delete" asp-controller="ToDoTask" asp-route-taskId="@Model.Id" class="col-6-sm">
                <button type="submit" class="btn btn-danger btn-lg">Delete ToDoTask</button>
                <a asp-action="Index" asp-controller="ToDoTask" class="btn btn-warning btn-lg">No</a>
            </form>
        </div>
    </div>
</div>